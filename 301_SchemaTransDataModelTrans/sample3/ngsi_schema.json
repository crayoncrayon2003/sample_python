{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {"type": "string"},
        "type": {"type": "string"},
        "name": {
            "type": "object",
            "properties": {
                "value": {"type": "string"}
            },
            "required": ["value"]
        },
        "temperature": {
            "type": "object",
            "properties": {
                "value": {"type": "integer"}
            },
            "required": ["value"]
        },
        "humidity": {
            "type": "object",
            "properties": {
                "value": {"type": "integer"}
            },
            "required": ["value"]
        }
    },
    "required": ["id", "type", "name", "temperature", "humidity"]
}
